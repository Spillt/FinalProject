<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="faq">

	<resultMap id="resultFaqList" type="Faqq">
		<result property="faqNo" column="FAQ_NO"/>
		<result property="faqGB" column="FAQ_GB"/>
		<result property="faqTitle" column="FAQ_Title"/>
		<result property="faqContent" column="FAQ_Content"/>
		<result property="faqWriter" column="FAQ_Writer"/>
		<result property="faqDate" column="FAQ_Date"/>
	</resultMap>
	
	<!-- 구분 별 리스트 전체 조회 -->
	<select id="openFaqList" parameterType="String" resultType="Faqq" resultMap="resultFaqList">
		<![CDATA[
			SELECT FAQ_NO, FAQ_GB, FAQ_Title, FAQ_Writer, FAQ_Date
			FROM TB_FAQ
			WHERE FAQ_GB = #{faqGB}
			ORDER BY FAQ_NO ASC
		]]>
	</select>
	
	<!-- 상세보기 -->
	<select id="faqDetail" parameterType="int" resultType="Faqq" resultMap="resultFaqList">
		<![CDATA[
			SELECT *
			FROM TB_FAQ
			WHERE FAQ_NO = #{faqNo}
		]]>
	</select>
	
</mapper>