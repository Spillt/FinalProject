<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="idealworldcup">
	<resultMap id="resultIdealWorldCup" type="IdealWorldCup">
		<result property="userId" column="USER_ID" />	<!-- 아이디 -->
		<result property="gender" column="GENDER" />			<!-- 성별 -->
		<result property="picturenm" column="PICTURE_NM" />	<!-- 사진 -->
	</resultMap>

	<select id="list16" resultType="IdealWorldCup" resultMap="resultIdealWorldCup"
		parameterType="String">
		 <![CDATA[
		select user_id, gender, picture_nm from( 
   					 select * from tb_profile
  					 JOIN TB_PROFILE_PICTURE USING(USER_ID)
   					 where gender != #{gender} AND THUMNAIL_FL = 0
  					 order by DBMS_RANDOM.RANDOM 
					 )
					 where rownum <3]]>
	</select>
	 <select id="selectProfileOne" resultType="String" parameterType="String">
        <![CDATA[
            SELECT gender FROM TB_PROFILE
            WHERE USER_ID = #{userId}
        ]]>
    </select>
</mapper>
